{
  "name": "Lepton",
  "version": "1.1.2",
  "description": "AWESOME Gist client for everyone, everywhere!",
  "productName": "Lepton",
  "main": "main.js",
  "scripts": {
    "lint": "eslint app",
    "dev": "node dev-server.js",
    "watch": "webpack --watch",
    "start": "electron ./main.js",
    "pack": "webpack --display-modules",
    "test": "webpack --display-modules",
    "dist": "build",
    "release": "build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hackjutsu/Lepton.git"
  },
  "keywords": [
    "gist",
    "js",
    "electron",
    "desktop"
  ],
  "author": "CosmoX",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.21.0",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "css-loader": "^0.26.1",
    "electron-builder": "^11.4.4",
    "electron": "^1.4.13",
    "eslint": "^3.12.2",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.0",
    "eslint-plugin-react": "^6.8.0",
    "eslint-plugin-standard": "^2.0.1",
    "file-loader": "^0.9.0",
    "html-loader": "^0.4.4",
    "json-loader": "^0.5.4",
    "node-sass": "^4.1.1",
    "redux-devtools": "^3.3.1",
    "sass-loader": "^4.1.1",
    "style-loader": "^0.13.1",
    "text-loader": "0.0.1",
    "url-loader": "^0.5.7",
    "webpack": "^2.2.0",
    "webpack-dev-server": "^1.16.2",
    "webpack-node-externals": "^1.5.4"
  },
  "dependencies": {
    "autolinker": "^1.4.0",
    "bluebird": "^3.4.7",
    "codemirror": "^5.23.0",
    "electron-context-menu": "^0.8.0",
    "electron-localshortcut": "^1.0.0",
    "electron-updater": "^1.4.2",
    "fuse.js": "^2.6.1",
    "highlight.js": "^9.9.0",
    "human-readable-time": "^0.2.4",
    "image-downloader": "^2.0.1",
    "marked": "^0.3.6",
    "proxy-agent": "^2.0.0",
    "react": "^15.4.1",
    "react-bootstrap": "^0.30.7",
    "react-codemirror": "^0.3.0",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.1",
    "react-split-pane": "^0.1.57",
    "redux": "^3.6.0",
    "redux-form": "^6.4.3",
    "redux-thunk": "^2.1.0",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "winston": "^2.3.0"
  },
  "build": {
    "appId": "com.cosmox.lepton",
    "mac": {
      "category": "public.app-category.productivity",
      "publish": [
        "github"
      ]
    },
    "win": {
      "title": "Lepton",
      "author": "CosmoX",
      "target": "nsis",
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": "AppImage",
      "publish": [
        "github"
      ]
    }
  }
}
